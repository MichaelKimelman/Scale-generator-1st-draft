        <!--<Button Grid.Row="0"  Height="30" Width="30" HorizontalAlignment="Left"/>-->

        <StackPanel Margin="10, 0, 0, 0" Grid.Row="1" Grid.ColumnSpan="2"  >



            <Label HorizontalAlignment="Left" >Positions</Label>
            <StackPanel x:Name="toggleButtonStackPanel" Margin="0, 10" HorizontalAlignment="Left" Orientation="Horizontal">
                <StackPanel.Resources>

                    <ControlTemplate x:Key="positionButton" TargetType="ToggleButton" >
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}" Stroke="{TemplateBinding Foreground}" />

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>

                    <Style TargetType="ToggleButton" >
                        <Setter Property="Margin" Value=" 0, 0, 10, 0" />
                        <Setter Property="Template"  Value="{StaticResource positionButton}" />
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property = "Background" Value="Green"/>
                                <Setter Property="Background" Value="Green" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="true" />
                                    <Condition Property="IsChecked" Value="false" />
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="LightBlue" />
                            </MultiTrigger>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="true" />
                                    <Condition Property="IsChecked" Value="true" />
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="Red" />
                            </MultiTrigger>
                            <!--<Trigger Property="IsMouseOver" Value="True">
                                <Setter Property = "Background" Value="LightBlue"/>
                                -->
                            <!--<Setter Property="Foreground" Value="Red" />-->
                            <!--
                            </Trigger>-->


                        </Style.Triggers>

                    </Style>


                </StackPanel.Resources>

                <ToggleButton Click="positionToggleButton_Click" Height="30" Width="30" x:Name="positionOne" >1</ToggleButton>
                <ToggleButton Click="positionToggleButton_Click" Height="30" Width="30" x:Name="positionTwo" >2</ToggleButton>
